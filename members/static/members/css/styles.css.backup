/* Reset básico */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f5dc;
    color: #333;
    line-height: 1.6;
}

a {
    color: var(--color-brand-primary);
    text-decoration: none;
    transition: color var(--transition-base);
}

a:hover {
    color: var(--color-brand-primary-dark);
}

.container {
    width: min(1400px, 100%);
    margin: 0 auto;
    padding: 0 var(--space-lg);
}

.card-surface {
    background: var(--color-bg-surface);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border-light);
}

.elevated {
    box-shadow: var(--shadow-md);
}

/* ===============================
   Layout: Header & Navegação
   =============================== */

.header-cantos {
    background: #ffffff;
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: 1px solid rgba(15, 23, 42, 0.06);
}

.header-main {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--space-md) var(--space-xl);
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    gap: var(--space-lg);
    align-items: center;
}

.logo-cantos {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    transition: transform var(--transition-base);
}

.logo-cantos:hover {
    transform: translateY(-2px);
}

.logo-icon {
    font-size: 2.75rem;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
}

.logo-text-wrapper {
    display: flex;
    flex-direction: column;
}

.logo-title {
    font-size: 1.75rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-brand-secondary);
    letter-spacing: 1px;
    line-height: 1;
    font-family: var(--font-family-serif);
}

.logo-subtitle {
    font-size: 0.75rem;
    color: var(--color-brand-accent);
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-top: 2px;
    font-weight: 300;
}

.search-wrapper {
    position: relative;
    flex: 1;
    max-width: 700px;
}

.search-form-cantos {
    display: flex;
    background: #fff;
    border-radius: 999px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
}

.search-form-cantos:focus-within {
    box-shadow: 0 8px 25px rgba(232, 184, 125, 0.35);
    transform: translateY(-1px);
}

.search-category-cantos {
    background: var(--color-bg-muted);
    border: none;
    padding: var(--space-sm) var(--space-lg);
    font-size: 0.9rem;
    color: var(--color-brand-secondary);
    cursor: pointer;
    font-weight: var(--font-weight-medium);
    transition: background var(--transition-base);
}

.search-category-cantos:hover {
    background: rgba(0,0,0,0.05);
}

.search-input-cantos {
    flex: 1;
    border: none;
    padding: var(--space-sm) var(--space-lg);
    font-size: 1rem;
    color: var(--color-brand-secondary);
    outline: none;
}

.search-input-cantos::placeholder {
    color: var(--color-text-muted);
}

.search-btn-cantos {
    background: var(--gradient-gold);
    border: none;
    padding: var(--space-sm) var(--space-lg);
    cursor: pointer;
    transition: transform var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-btn-cantos:hover {
    transform: scale(1.05);
}

.search-icon-cantos {
    font-size: 1.25rem;
}

.account-section {
    display: flex;
    align-items: center;
    gap: var(--space-md);
}

.account-btn,
.account-dropdown-btn {
    position: relative;
    background: rgba(15, 23, 42, 0.04);
    color: var(--color-brand-secondary);
    padding: var(--space-sm) var(--space-md);
    border-radius: 999px;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: var(--font-weight-medium);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    transition: all var(--transition-base);
    border: 1px solid rgba(92,106,196,0.12);
    cursor: pointer;
}

.account-btn:hover,
.account-dropdown-btn:hover {
    background: rgba(92, 106, 196, 0.1);
    border-color: rgba(92, 106, 196, 0.4);
    transform: translateY(-2px);
}

.account-btn-icon {
    font-size: 1.1rem;
}

.account-dropdown-wrapper {
    position: relative;
}

.account-dropdown-menu {
    position: absolute;
    top: 120%;
    right: 0;
    background: #fff;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    min-width: 220px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--transition-base);
    overflow: hidden;
}

.account-dropdown-wrapper:hover .account-dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.dropdown-item-cantos {
    display: block;
    padding: var(--space-sm) var(--space-lg);
    color: var(--color-brand-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all var(--transition-base);
    border: none;
    background: none;
    width: 100%;
    text-align: left;
    cursor: pointer;
}

.dropdown-item-cantos:hover {
    background: var(--color-bg-muted);
    color: var(--color-brand-primary);
}

.dropdown-divider-cantos {
    height: 1px;
    background: rgba(15, 23, 42, 0.08);
    margin: 5px 0;
}

.cart-btn {
    position: relative;
    background: var(--gradient-brand);
    color: white;
    padding: var(--space-sm) var(--space-lg);
    border-radius: 999px;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: var(--font-weight-semibold);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    transition: all var(--transition-base);
    box-shadow: 0 8px 25px rgba(232, 184, 125, 0.35);
}

.cart-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(232, 184, 125, 0.45);
}

.cart-count-cantos {
    background: #c0392b;
    color: white;
    font-size: 0.7rem;
    font-weight: var(--font-weight-bold);
    padding: 2px 6px;
    border-radius: 999px;
    min-width: 18px;
    text-align: center;
}

.nav-secondary-cantos {
    background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
    border-top: 1px solid rgba(255,255,255,0.1);
    background: transparent;
    border-top: 1px solid rgba(15,23,42,0.04);
}

.nav-secondary-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--space-sm) var(--space-xl);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
}

.nav-link-cantos {
    color: var(--color-text-muted);
    text-decoration: none;
    padding: var(--space-md) var(--space-lg);
    font-size: 0.9rem;
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-base);
    border-bottom: 3px solid transparent;
    position: relative;
    white-space: nowrap;
}

.nav-link-cantos:hover {
    color: var(--color-brand-secondary);
    background: rgba(92,106,196,0.08);
    border-bottom-color: var(--color-brand-primary);
}

.nav-link-cantos::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 3px;
    background: var(--color-brand-primary);
    transition: all var(--transition-base);
    transform: translateX(-50%);
}

.nav-link-cantos:hover::after {
    width: 80%;
}

@media (max-width: 1200px) {
    .header-main {
        grid-template-columns: auto 1fr;
        gap: var(--space-md);
    }

    .account-section {
        grid-column: 1 / -1;
        justify-content: flex-end;
    }
}

@media (max-width: 768px) {
    .header-main {
        grid-template-columns: 1fr;
        gap: var(--space-sm);
    }

    .logo-cantos {
        justify-content: center;
    }

    .search-wrapper {
        max-width: 100%;
    }

    .account-section {
        justify-content: center;
        flex-wrap: wrap;
    }

    .nav-secondary-content {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
}

/* ===============================
   Página Principal - Layout
   =============================== */

.home-page .main-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--space-2xl) calc(var(--space-2xl) * 1.5);
}

.home-page .hero {
    background: var(--gradient-deep);
    color: white;
    padding: 0;
    text-align: center;
    margin: calc(var(--space-2xl) * -1) calc(var(--space-2xl) * -1.5) var(--space-2xl);
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    position: relative;
    height: 300px;
    overflow: hidden;
}

.home-page .hero-carousel {
    position: relative;
    width: 100%;
    height: 100%;
}

.home-page .hero-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
}

.home-page .hero-slide.active {
    opacity: 1;
}

.home-page .hero-slide::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(44, 62, 80, 0.7);
}

.home-page .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: var(--space-2xl);
}

.home-page .hero-content h1 {
    font-size: clamp(2.25rem, 4vw, 2.75rem);
    margin-bottom: var(--space-sm);
    font-weight: var(--font-weight-bold);
}

.home-page .hero-content p {
    font-size: 1.125rem;
    margin-bottom: 0;
    opacity: 0.95;
}

.home-page .hero-cta-wrapper {
    margin-top: var(--space-lg);
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
}

.home-page .carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.3);
    color: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    z-index: 10;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(5px);
}

.home-page .carousel-arrow:hover {
    background: rgba(255, 255, 255, 0.5);
    transform: translateY(-50%) scale(1.1);
}

.home-page .carousel-arrow-left { left: 20px; }
.home-page .carousel-arrow-right { right: 20px; }

.home-page .carousel-indicators {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
}

.home-page .carousel-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    cursor: pointer;
    transition: all var(--transition-base);
}

.home-page .carousel-indicator.active {
    background: white;
    width: 30px;
    border-radius: 6px;
}

.home-page .hero-btn {
    background: var(--gradient-gold);
    color: white;
    padding: var(--space-sm) var(--space-xl);
    border-radius: 999px;
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-sm);
}

.home-page .hero-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.home-page .hero-btn.outline {
    background: transparent;
    border: 2px solid rgba(255,255,255,0.7);
    box-shadow: none;
}

.home-page .hero-btn.outline:hover {
    background: rgba(255,255,255,0.1);
    border-color: #fff;
}

.home-page .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-lg);
    margin: var(--space-xl) 0;
}

.home-page .benefit-card {
    background: var(--color-bg-surface);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border-light);
}

.home-page .benefit-card h3 {
    margin: 0 0 var(--space-xs);
    font-size: 1.12rem;
    color: var(--color-brand-secondary);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
}

.home-page .benefit-card p {
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
    line-height: 1.5;
}

.home-page .benefit-card a {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    color: var(--color-brand-primary);
}

.home-page .livros-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
    align-items: stretch;
}

.home-page .livro-card {
    background: linear-gradient(180deg, #ffffff 0%, #f4f6fb 65%, #ffffff 100%);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    display: flex;
    flex-direction: column;
    position: relative;
    height: 100%;
    border: 1px solid rgba(15, 23, 42, 0.06);
}

.home-page .livro-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-md);
}

.home-page .livro-card__media {
    position: relative;
    padding: var(--space-md) var(--space-md) var(--space-sm);
}

.home-page .livro-card__media-link {
    display: block;
}

.home-page .livro-imagem-wrapper {
    position: relative;
    width: 100%;
    height: 280px;
    overflow: hidden;
    background: #f8f9fa;
    border-radius: var(--radius-md);
}

.home-page .livro-imagem {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
}

.home-page .livro-card:hover .livro-imagem {
    transform: scale(1.05);
}

.home-page .livro-placeholder {
    width: 100%;
    height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
    font-size: 3rem;
}

.home-page .livro-card__body {
    padding: 0 var(--space-xl) var(--space-xl);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
}

.home-page .livro-card__eyebrow {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-xs);
}

.home-page .livro-card__categoria {
    color: var(--color-text-muted);
}

.home-page .livro-card__rating {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--color-brand-secondary);
    font-size: 0.85rem;
}

.home-page .livro-card__rating-star {
    color: #f5b014;
}

.home-page .livro-card__rating-count {
    color: var(--color-text-muted);
    font-size: 0.8rem;
}

.home-page .livro-card__title-link {
    text-decoration: none;
}

.home-page .livro-badges {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    flex-direction: column;
    gap: 6px;
    z-index: 5;
}

.home-page .livro-badge {
    padding: 5px 12px;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(10px);
    color: white;
}

.home-page .badge-novo { background: linear-gradient(135deg, #cd853f, #d2691e); }
.home-page .badge-oferta { background: linear-gradient(135deg, #e74c3c, #c0392b); }
.home-page .badge-vendido { background: linear-gradient(135deg, #f39c12, #d68910); }

.home-page .livro-titulo {
    font-size: 1.05rem;
    font-weight: var(--font-weight-semibold);
    color: var(--color-brand-secondary);
    margin-bottom: var(--space-2xs);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 44px;
}

.home-page .livro-autor {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: 0;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.home-page .livro-card__description {
    color: var(--color-text-secondary);
    font-size: 0.88rem;
    line-height: 1.5;
    min-height: 42px;
}

.home-page .livro-card__meta {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-md);
    padding: var(--space-md);
    border: 1px solid rgba(15, 23, 42, 0.06);
    border-radius: var(--radius-md);
    background: rgba(255,255,255,0.7);
}

.home-page .livro-card__meta li {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.home-page .livro-card__meta span {
    font-size: 0.75rem;
    color: var(--color-text-muted);
}

.home-page .livro-card__meta strong {
    font-size: 0.88rem;
    color: var(--color-brand-secondary);
}

.home-page .livro-card__price-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
    margin-top: var(--space-sm);
}

.home-page .livro-card__price {
    display: flex;
    flex-direction: column;
}

.home-page .livro-preco-antigo {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-decoration: line-through;
}

.home-page .livro-preco-atual {
    font-size: 1.7rem;
    font-weight: var(--font-weight-bold);
    color: #27ae60;
}

.home-page .livro-preco-consultar {
    font-size: 0.95rem;
    color: var(--color-text-muted);
}

.home-page .livro-card__stock-tag {
    font-size: 0.8rem;
    font-weight: var(--font-weight-semibold);
    padding: 6px 12px;
    border-radius: 999px;
    border: 1px solid transparent;
}

.home-page .livro-card__stock-tag.em-stock {
    color: #15803d;
    background: rgba(134, 239, 172, 0.25);
    border-color: rgba(34, 197, 94, 0.35);
}

.home-page .livro-card__stock-tag.sem-stock {
    color: #b91c1c;
    background: rgba(248, 113, 113, 0.2);
    border-color: rgba(248, 113, 113, 0.5);
}

.home-page .livro-card__actions {
    display: flex;
    gap: var(--space-sm);
    margin-top: var(--space-md);
}

.home-page .livro-card__secondary-link {
    flex: 0 0 auto;
    padding: 0 var(--space-md);
    border-radius: var(--radius-sm);
    border: 1px solid rgba(15, 23, 42, 0.15);
    color: var(--color-brand-secondary);
    font-weight: var(--font-weight-semibold);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all var(--transition-base);
    font-size: 0.9rem;
}

.home-page .livro-card__secondary-link:hover {
    border-color: var(--color-brand-primary);
    color: var(--color-brand-primary);
}

.home-page .btn-favorito {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: none;
    background: rgba(255,255,255,0.9);
    color: #e74c3c;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-xs);
}

.home-page .btn-favorito.favorito {
    background: #e74c3c;
    color: white;
}

.home-page .btn-favorito:hover {
    transform: scale(1.05);
}

.home-page .btn-favorito.ativo,
.home-page .btn-favorito.favorito {
    background: linear-gradient(135deg, #ff6b6b, #ee5a24);
    color: white;
}

.home-page .livro-card__favorite {
    box-shadow: var(--shadow-sm);
}

.home-page .avaliacoes-info {
    display: flex;
    gap: var(--space-sm);
    font-size: 0.85rem;
    color: var(--color-text-muted);
}

.home-page .chips {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
}

.home-page .chip {
    padding: var(--space-xs) var(--space-md);
    border-radius: 999px;
    border: 1px solid var(--color-border-light);
    cursor: pointer;
    font-size: 0.85rem;
    transition: all var(--transition-base);
}

.home-page .chip.active {
    background: var(--color-brand-primary);
    color: white;
    border-color: var(--color-brand-primary);
}

.home-page .chip:hover {
    border-color: var(--color-brand-primary);
    color: var(--color-brand-primary);
}

.home-page .btn-adicionar-carrinho {
    flex: 1;
    padding: var(--space-md);
    border: none;
    background: var(--gradient-gold);
    color: white;
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    border-radius: var(--radius-sm);
    min-height: 48px;
    box-shadow: var(--shadow-xs);
}

.home-page .btn-adicionar-carrinho:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
}

.home-page .btn-adicionar-carrinho.adicionado {
    background: linear-gradient(135deg, #4caf50, #45a049);
}

.home-page .no-results {
    text-align: center;
    padding: var(--space-2xl) var(--space-lg);
    color: var(--color-text-muted);
    font-size: 1.1rem;
}

@media (max-width: 768px) {
    .home-page .main-container {
        padding: var(--space-xl);
    }

    .home-page .hero {
        margin: calc(var(--space-xl) * -1) calc(var(--space-xl) * -1) var(--space-xl);
        height: auto;
    }

    .home-page .hero-content {
        padding: var(--space-xl);
    }

    .home-page .livros-grid {
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: var(--space-lg);
    }

    .home-page .livro-card__body {
        padding: 0 var(--space-lg) var(--space-lg);
    }

    .home-page .livro-card__meta {
        grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .home-page .livro-card__actions {
        flex-direction: column;
    }

    .home-page .livro-card__secondary-link {
        width: 100%;
        text-align: center;
    }
}

.home-page .grid-destinos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-lg);
    margin: var(--space-2xl) 0;
}

.home-page .destino-card {
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border-light);
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
}

.home-page .destino-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-md);
}

.home-page .destaque-banner {
    background: linear-gradient(135deg, rgba(205, 133, 63, 0.9), rgba(210, 105, 30, 0.95));
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    color: white;
    margin: var(--space-2xl) 0;
    box-shadow: var(--shadow-md);
}

.home-page .destaque-banner a {
    color: white;
    font-weight: var(--font-weight-semibold);
    text-decoration: underline;
}

.home-page .cta-final {
    text-align: center;
    background: var(--color-bg-surface);
    padding: var(--space-2xl);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border-light);
}

.home-page .cta-final a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-sm) var(--space-xl);
    border-radius: 999px;
    background: var(--gradient-brand);
    color: white;
    font-weight: var(--font-weight-semibold);
    margin-top: var(--space-md);
    transition: transform var(--transition-base);
}

.home-page .cta-final a:hover {
    transform: translateY(-2px);
}

/* Animaciones globales */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideIn {
    from {
        transform: translateX(100%);
    }
    to {
        transform: translateX(0);
    }
}

@keyframes slideOut {
    from {
        transform: translateX(0);
    }
    to {
        transform: translateX(100%);
    }
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
}

/* Barra de información superior */
.top-bar {
    background: var(--gradient-brand);
    color: #fff;
    padding: var(--space-sm) 0;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
}

.top-bar-content {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: min(1400px, 100%);
    margin: 0 auto;
    font-size: 0.9em;
    font-family: var(--font-family-base);
}

.top-bar-item {
    display: flex;
    align-items: center;
    gap: 8px;
    transition: transform var(--transition-base);
}

.top-bar-item:hover {
    transform: scale(1.05);
}

/* Header principal */
.header {
    background: var(--gradient-deep);
    border-bottom: 1px solid var(--color-brand-accent);
    padding: var(--space-md) var(--space-xl);
    box-shadow: var(--shadow-md);
}

.header-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
}

.logo {
    font-size: 2.5em;
    color: var(--color-brand-accent);
    font-weight: var(--font-weight-bold);
    text-decoration: none;
    font-family: var(--font-family-serif);
    letter-spacing: 2px;
    text-shadow: 0 10px 20px rgba(0,0,0,0.35);
    transition: all var(--transition-base);
}

.logo:hover {
    color: #ffdbb0;
    text-shadow: 0 12px 24px rgba(255, 219, 176, 0.5);
    transform: scale(1.02);
}

/* Búsqueda */
.search-container {
    flex: 1;
    max-width: 600px;
}

.search-box {
    display: flex;
    align-items: center;
    box-shadow: var(--shadow-sm);
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.15);
}

.search-box input[type="text"] {
    flex: 1;
    padding: var(--space-sm) var(--space-lg);
    border: none;
    background: transparent;
    color: var(--color-text-primary);
    font-size: 1em;
    border-radius: 999px 0 0 999px;
    outline: none;
    transition: all var(--transition-base);
}

.search-box input[type="text"]:focus {
    background: rgba(255,255,255,0.15);
    box-shadow: inset 0 0 0 1px rgba(255,255,255,0.35);
}

.search-btn {
    padding: var(--space-sm) var(--space-lg);
    background: var(--gradient-gold);
    color: #fff;
    border: none;
    border-left: none;
    border-radius: 0 999px 999px 0;
    cursor: pointer;
    font-weight: var(--font-weight-semibold);
    transition: all var(--transition-base);
    font-family: var(--font-family-base);
}

.search-btn:hover {
    transform: scale(1.03);
    filter: brightness(1.05);
}

/* Navegación */
.nav {
    background: rgba(30, 43, 59, 0.95);
    border-bottom: 1px solid rgba(255,255,255,0.08);
    box-shadow: var(--shadow-sm);
}

.nav-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    gap: 50px;
    padding: 18px 40px;
}

.nav-link {
    color: rgba(255,255,255,0.85);
    text-decoration: none;
    font-size: 1.1em;
    font-weight: 500;
    padding: 8px 15px;
    transition: all var(--transition-base);
    border-bottom: 2px solid transparent;
    position: relative;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-brand-accent);
    transition: width var(--transition-base);
}

.nav-link:hover {
    color: #fff;
}

.nav-link:hover::after {
    width: 100%;
}

/* User actions */
.user-actions {
    display: flex;
    align-items: center;
    gap: 15px;
}

.cart-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    background: linear-gradient(135deg, var(--color-error), #c62828);
    color: #fff;
    border-radius: 50%;
    width: 22px;
    height: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75em;
    font-weight: bold;
    font-family: var(--font-family-base);
    box-shadow: var(--shadow-sm);
    animation: pulse 2s ease-in-out infinite;
    border: 2px solid #fff;
}

.btn-primary {
    background: var(--gradient-brand);
    color: #fff;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-sm);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-family: var(--font-family-base);
    font-size: 0.95em;
    transition: all var(--transition-base);
    border: none;
    cursor: pointer;
    box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    filter: brightness(1.05);
}

.btn-logout {
    background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%) !important;
    color: #fff;
    border-color: #b71c1c !important;
}

.btn-logout:hover {
    background: linear-gradient(135deg, #b71c1c 0%, #9a0007 100%) !important;
}

/* Hero Section */
.hero {
    background: var(--gradient-deep);
    padding: 80px 40px;
    text-align: center;
    border-bottom: 3px solid rgba(255,255,255,0.1);
    position: relative;
    overflow: hidden;
    box-shadow: inset 0 -3px 15px rgba(0, 0, 0, 0.3);
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        repeating-linear-gradient(
            90deg,
            transparent,
            transparent 100px,
            rgba(244, 164, 96, 0.1) 100px,
            rgba(244, 164, 96, 0.1) 200px
        );
    pointer-events: none;
}

.hero-content {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    animation: fadeIn 1s ease;
}

.hero h1 {
    font-size: 3.5em;
    color: var(--color-brand-accent);
    margin-bottom: 20px;
    font-weight: 300;
    letter-spacing: 3px;
    text-shadow: 3px 3px 8px rgba(0,0,0,0.7);
    animation: pulse 3s ease-in-out infinite;
}

.hero p {
    font-size: 1.3em;
    color: rgba(255,255,255,0.85);
    margin-bottom: 30px;
    font-family: var(--font-family-base);
}

.hero-btn {
    display: inline-block;
    padding: 15px 40px;
    background: var(--gradient-gold);
    color: #fff;
    text-decoration: none;
    font-size: 1.2em;
    font-weight: bold;
    border-radius: 999px;
    transition: all var(--transition-base);
    font-family: var(--font-family-base);
    border: none;
    box-shadow: var(--shadow-md);
}

.hero-btn:hover {
    transform: scale(1.08) translateY(-3px);
    box-shadow: var(--shadow-lg);
    filter: brightness(1.05);
}

/* Sección de catálogo */
.catalog-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 40px;
    background: var(--color-bg-page);
}

.section-title {
    text-align: center;
    font-size: 2.5em;
    color: var(--color-brand-secondary);
    margin-bottom: 50px;
    font-weight: 300;
    letter-spacing: 2px;
    position: relative;
    padding-bottom: 20px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--color-brand-primary), transparent);
    border-radius: 2px;
}

/* Galería de libros */
.galeria {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 60px;
}

.livro-card {
    background: #fffef9;
    border: 2px solid #e5c29f;
    border-radius: 12px;
    padding: 0;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 12px rgba(92, 64, 51, 0.15);
    animation: fadeIn 0.5s ease;
}

.livro-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 30px rgba(210, 105, 30, 0.4);
    border-color: #d2691e;
}

.livro-card:hover .livro-capa {
    transform: scale(1.05);
}

.novidade-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: linear-gradient(135deg, #00bcd4 0%, #00acc1 100%);
    color: #fff;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.85em;
    font-weight: bold;
    z-index: 10;
    font-family: Arial, sans-serif;
    box-shadow: 0 3px 10px rgba(0, 188, 212, 0.4);
    animation: pulse 2s ease-in-out infinite;
}

.livro-capa {
    width: 100%;
    height: 350px;
    background: #fff9f0;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    border-bottom: 2px solid #e5c29f;
    transition: transform 0.3s ease;
}

.livro-capa img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.livro-card:hover .livro-capa img {
    transform: scale(1.1);
}

.livro-capa .placeholder {
    font-size: 4em;
    color: #ccc;
}

.livro-info {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.categoria-tag {
    font-size: 0.85em;
    color: #999;
    margin-bottom: 8px;
    font-family: Arial, sans-serif;
}

.tipo-capa {
    font-size: 0.85em;
    color: #999;
    margin-bottom: 8px;
    font-family: Arial, sans-serif;
}

.titulo {
    font-weight: bold;
    font-size: 1.1em;
    color: #5c4033;
    margin-bottom: 8px;
    min-height: 48px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
    transition: color 0.3s;
}

.livro-card a.livro-link {
    text-decoration: none;
    color: inherit;
}

.livro-card a.livro-link:hover .titulo {
    color: #d2691e;
    text-decoration: underline;
}

.autor {
    font-size: 0.95em;
    color: #704214;
    margin-bottom: 15px;
    font-family: Arial, sans-serif;
}

/* Stock badges */
.stock-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.85em;
    font-weight: 600;
    margin-bottom: 10px;
    font-family: Arial, sans-serif;
}

.stock-badge.no-stock {
    background: #ffebee;
    color: #c62828;
    border: 1px solid #ef9a9a;
}

.stock-badge.low-stock {
    background: #fff3e0;
    color: #e65100;
    border: 1px solid #ffb74d;
    animation: pulse 2s ease-in-out infinite;
}

.precos {
    margin-bottom: 10px;
}

.preco-antigo {
    text-decoration: line-through;
    color: #888;
    font-size: 0.95em;
    margin-right: 8px;
}

.preco-novo {
    color: #5c4033;
    font-size: 1.5em;
    font-weight: bold;
}

.desconto {
    color: #ff4444;
    font-weight: bold;
    margin-left: 6px;
    font-size: 0.9em;
}

.estrelas {
    color: #d4af37;
    margin-bottom: 10px;
    font-size: 1em;
}

.estrelas .empty {
    color: #ddd;
}

.loja-info {
    font-size: 0.9em;
    color: #999;
    margin-bottom: 15px;
    font-family: Arial, sans-serif;
}

.actions {
    margin-top: auto;
    display: flex;
    gap: 8px;
    width: 100%;
}

.actions a, .actions button {
    flex: 1;
    background: #d2691e;
    color: #fff;
    padding: 12px 15px;
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.95em;
    font-weight: bold;
    transition: all 0.3s;
    font-family: Arial, sans-serif;
    text-align: center;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    box-shadow: 0 2px 8px rgba(210, 105, 30, 0.3);
}

.actions a:hover, .actions button:hover {
    background: #b8541a;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(210, 105, 30, 0.5);
}

.btn-adicionar {
    background: linear-gradient(135deg, #cc5500, #d2691e) !important;
}

.btn-adicionar:hover {
    background: linear-gradient(135deg, #d2691e, #cc5500) !important;
}

.btn-comparar {
    background: linear-gradient(135deg, #666, #777) !important;
}

.btn-comparar:hover {
    background: linear-gradient(135deg, #777, #888) !important;
}

.btn-trailer {
    background: linear-gradient(135deg, #00bcd4, #00acc1) !important;
}

.btn-trailer:hover {
    background: linear-gradient(135deg, #00acc1, #0097a7) !important;
}

/* Footer */
.footer {
    background: linear-gradient(135deg, #5c4033 0%, #704214 100%);
    border-top: 3px solid #f4a460;
    padding: 40px;
    text-align: center;
    color: #f5e6d3;
    font-family: Arial, sans-serif;
    box-shadow: 0 -2px 15px rgba(0, 0, 0, 0.2);
}

.footer p {
    margin: 8px 0;
    transition: color 0.3s;
}

.footer p:hover {
    color: #ffb347;
}

/* Sidebar do carrinho */
.carrinho-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(2px);
}

.carrinho-overlay.active {
    opacity: 1;
    visibility: visible;
}

.carrinho-sidebar {
    position: fixed;
    top: 0;
    right: -450px;
    width: 450px;
    height: 100%;
    background: #fff;
    z-index: 1000;
    transition: right 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    display: flex;
    flex-direction: column;
    box-shadow: -5px 0 25px rgba(0, 0, 0, 0.3);
}

.carrinho-sidebar.active {
    right: 0;
}

.carrinho-sidebar-header {
    padding: 25px;
    background: linear-gradient(135deg, #fff 0%, #fffef9 100%);
    border-bottom: 3px solid #e5c29f;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.carrinho-sidebar-header h2 {
    color: #d2691e;
    font-size: 1.3em;
    margin: 0;
    font-weight: 600;
}

.btn-fechar {
    background: #d2691e;
    color: #fff;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    font-size: 1.8em;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    line-height: 1;
    box-shadow: 0 3px 10px rgba(210, 105, 30, 0.3);
}

.btn-fechar:hover {
    background: #cc5500;
    transform: rotate(90deg) scale(1.1);
    box-shadow: 0 5px 15px rgba(210, 105, 30, 0.5);
}

.carrinho-sidebar-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
}

.sidebar-produto-item {
    display: flex;
    gap: 15px;
    padding: 20px;
    background: linear-gradient(135deg, #fff 0%, #fffef9 100%);
    border: 2px solid #e5c29f;
    border-radius: 12px;
    margin-bottom: 15px;
    position: relative;
    transition: all 0.3s;
}

.sidebar-produto-item:hover {
    box-shadow: 0 4px 15px rgba(210, 105, 30, 0.3);
    transform: translateX(-5px);
    border-color: #d2691e;
}

.sidebar-btn-remover {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #ffeaea;
    border: none;
    color: #d32f2f;
    font-size: 1.5em;
    cursor: pointer;
    padding: 0;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    border-radius: 50%;
}

.sidebar-btn-remover:hover {
    background: #ff4444;
    color: #fff;
    transform: scale(1.15);
}

.sidebar-produto-img {
    width: 60px;
    height: 80px;
    background: #f9f6f0;
    border: 1px solid #e5c29f;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    flex-shrink: 0;
}

.sidebar-produto-info {
    flex: 1;
}

.sidebar-produto-info h4 {
    color: #5c4033;
    font-size: 1em;
    margin: 0 0 8px 0;
    line-height: 1.3;
}

.sidebar-produto-quantidade {
    color: #704214;
    font-size: 0.9em;
    margin: 0;
}

.sidebar-produto-preco {
    color: #d2691e;
    font-weight: bold;
}

.carrinho-sidebar-footer {
    padding: 25px;
    background: #fff;
    border-top: 2px solid #e5c29f;
}

.sidebar-subtotal {
    display: flex;
    justify-content: space-between;
    padding: 15px 0;
    font-size: 1.1em;
    color: #5c4033;
    margin-bottom: 15px;
}

.sidebar-subtotal strong {
    color: #d2691e;
    font-size: 1.3em;
}

.btn-ver-carrinho-completo {
    width: 100%;
    padding: 12px;
    background: #fff;
    color: #d2691e;
    border: 2px solid #d2691e;
    border-radius: 25px;
    font-size: 1em;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    margin-bottom: 10px;
    font-family: Arial, sans-serif;
}

.btn-ver-carrinho-completo:hover {
    background: #fff9f0;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(210, 105, 30, 0.3);
}

.btn-finalizar-sidebar {
    width: 100%;
    padding: 15px;
    background: linear-gradient(135deg, #d2691e 0%, #cc5500 100%);
    color: #fff;
    border: none;
    border-radius: 25px;
    font-size: 1.1em;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    font-family: Arial, sans-serif;
    box-shadow: 0 4px 15px rgba(210, 105, 30, 0.4);
}

.btn-finalizar-sidebar:hover {
    background: linear-gradient(135deg, #cc5500 0%, #b84c00 100%);
    transform: translateY(-2px);
