/* ==================== PÁGINA DE CARRINHO ==================== */

.carrinho-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px;
    background: #f5e6d3;
    min-height: calc(100vh - 300px);
}

.carrinho-titulo {
    color: #d2691e;
    font-size: 2.5em;
    margin-bottom: 30px;
    font-weight: 300;
}

.carrinho-content {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 30px;
}

.carrinho-produtos {
    background: #fff;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 2px 8px rgba(92, 64, 51, 0.15);
}

.carrinho-vazio {
    text-align: center;
    padding: 60px 20px;
    color: #704214;
}

.carrinho-vazio h2 {
    font-size: 1.8em;
    margin-bottom: 15px;
    color: #5c4033;
}

.carrinho-vazio p {
    font-size: 1.1em;
    margin-bottom: 25px;
}

.btn-continuar {
    display: inline-block;
    padding: 12px 30px;
    background: #d2691e;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: all 0.3s;
}

.btn-continuar:hover {
    background: #b8541a;
    transform: translateY(-2px);
}

.produto-header {
    display: grid;
    grid-template-columns: 2fr 1fr 1.5fr 1fr;
    gap: 20px;
    padding-bottom: 15px;
    border-bottom: 2px solid #e5c29f;
    margin-bottom: 20px;
    font-weight: bold;
    color: #5c4033;
}

.produto-item {
    display: grid;
    grid-template-columns: 2fr 1fr 1.5fr 1fr;
    gap: 20px;
    padding: 20px 0;
    border-bottom: 1px solid #e5c29f;
    align-items: center;
}

.produto-info {
    display: flex;
    gap: 15px;
    align-items: center;
}

.produto-img {
    width: 80px;
    height: 100px;
    background: #f9f6f0;
    border: 1px solid #e5c29f;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    overflow: hidden;
}

.produto-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.produto-detalhes h3 {
    color: #5c4033;
    font-size: 1.1em;
    margin-bottom: 5px;
}

.produto-detalhes p {
    color: #704214;
    font-size: 0.9em;
}

.produto-preco {
    color: #d2691e;
    font-size: 1.2em;
    font-weight: bold;
}

.produto-quantidade {
    display: flex;
    align-items: center;
    gap: 10px;
}

.qty-btn {
    width: 32px;
    height: 32px;
    border: 2px solid #d2691e;
    background: #fff;
    color: #d2691e;
    border-radius: 50%;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.3s;
}

.qty-btn:hover {
    background: #d2691e;
    color: #fff;
}

.qty-input {
    width: 50px;
    text-align: center;
    border: 2px solid #e5c29f;
    border-radius: 5px;
    padding: 5px;
    font-weight: bold;
    color: #5c4033;
}

.produto-subtotal {
    color: #d2691e;
    font-size: 1.2em;
    font-weight: bold;
    text-align: right;
}

.btn-remover {
    background: none;
    border: none;
    color: #999;
    cursor: pointer;
    font-size: 1.3em;
    padding: 5px;
    transition: color 0.3s;
}

.btn-remover:hover {
    color: #ff4444;
}

.carrinho-resumo {
    background: #fff;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 2px 8px rgba(92, 64, 51, 0.15);
    height: fit-content;
    position: sticky;
    top: 20px;
}

.resumo-titulo {
    color: #5c4033;
    font-size: 1.5em;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 2px solid #e5c29f;
}

.resumo-linha {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    color: #704214;
}

.resumo-linha.destaque {
    font-size: 1.1em;
    color: #5c4033;
}

.resumo-total {
    display: flex;
    justify-content: space-between;
    padding: 20px 0;
    border-top: 2px solid #e5c29f;
    margin-top: 15px;
    font-size: 1.3em;
    font-weight: bold;
    color: #5c4033;
}

.resumo-total .valor {
    color: #d2691e;
}

.resumo-iva {
    font-size: 0.85em;
    color: #999;
    margin-top: -10px;
}

.codigo-promocional {
    margin: 20px 0;
    padding: 20px 0;
    border-top: 1px solid #e5c29f;
    border-bottom: 1px solid #e5c29f;
}

.codigo-promocional h4 {
    color: #5c4033;
    margin-bottom: 12px;
    font-size: 1em;
}

.codigo-input-group {
    display: flex;
    gap: 8px;
}

.codigo-input-group input {
    flex: 1;
    padding: 10px;
    border: 2px solid #e5c29f;
    border-radius: 5px;
    outline: none;
}

.codigo-input-group input:focus {
    border-color: #d2691e;
}

.btn-aplicar {
    padding: 10px 20px;
    background: #d2691e;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
}

.btn-aplicar:hover {
    background: #b8541a;
}

.btn-finalizar {
    width: 100%;
    padding: 15px;
    background: #d2691e;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 1.1em;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    margin-top: 20px;
}

.btn-finalizar:hover {
    background: #cc5500;
    transform: translateY(-2px);
}

.btn-ver-carrinho {
    width: 100%;
    padding: 15px;
    background: #fff;
    color: #d2691e;
    border: 2px solid #d2691e;
    border-radius: 8px;
    font-size: 1em;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    margin-top: 10px;
}

.btn-ver-carrinho:hover {
    background: #fff9f0;
}

/* Responsive para página de carrinho */
@media (max-width: 1024px) {
    .carrinho-content {
        grid-template-columns: 1fr;
    }

    .carrinho-resumo {
        position: static;
    }

    .produto-header,
    .produto-item {
        grid-template-columns: 2fr 1fr 1.2fr 0.8fr;
        gap: 10px;
    }
}

@media (max-width: 768px) {
    .produto-header {
        display: none;
    }

    .produto-item {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .produto-info {
        flex-direction: column;
        text-align: center;
    }
}

/* ==================== ANIMAÇÕES ==================== */

@keyframes slideIn {
    from {
        transform: translateX(400px);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes slideOut {
    from {
        transform: translateX(0);
        opacity: 1;
    }
    to {
        transform: translateX(400px);
        opacity: 0;
    }
}

/* ==================== PÁGINA DE LOGIN ==================== */

.login-container {
    max-width: 500px;
    margin: 60px auto;
    background: #2a2a2a;
    border-radius: 12px;
    border: 2px solid #333;
    padding: 50px;
    position: relative;
}

.close-circle {
    position: absolute;
    right: 20px;
    top: 20px;
    background: #d4af37;
    color: #000;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
}

.close-circle:hover {
    background: #f0d060;
    transform: scale(1.1);
}

.login-container h1 {
    color: #d4af37;
    font-size: 2.5em;
    margin: 0 0 30px 0;
    text-align: center;
}

.field {
    margin-bottom: 20px;
}

.field input {
    width: 100%;
    border: 2px solid #444;
    background: #1a1a1a;
    color: #e0e0e0;
    padding: 14px;
    font-size: 1em;
    border-radius: 6px;
    outline: none;
    transition: border-color 0.3s;
}

.field input:focus {
    border-color: #d4af37;
}

.inline-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 25px;
}

.inline-row .checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #999;
}

.inline-row .checkbox input {
    width: 18px;
    height: 18px;
    cursor: pointer;
}

.inline-row .forgot {
    color: #d4af37;
    text-decoration: none;
    transition: color 0.3s;
}

.inline-row .forgot:hover {
    color: #f0d060;
}

.primary {
    background: #d4af37;
    color: #000;
    width: 100%;
    padding: 14px;
    border: none;
    border-radius: 30px;
    font-weight: bold;
    font-size: 1.1em;
    cursor: pointer;
    transition: all 0.3s;
}

.primary:hover {
    background: #f0d060;
    transform: translateY(-2px);
}

.separator {
    text-align: center;
    margin: 25px 0;
    position: relative;
}

.separator:before,
.separator:after {
    content: '';
    height: 1px;
    background: #444;
    width: 40%;
    position: absolute;
    top: 50%;
}

.separator:before {
    left: 0;
}

.separator:after {
    right: 0;
}

.separator span {
    background: #2a2a2a;
    padding: 0 15px;
    color: #999;
}

.cta {
    display: flex;
    gap: 12px;
    align-items: center;
    justify-content: center;
    border: 2px solid #444;
    padding: 14px;
    text-decoration: none;
    color: #d4af37;
    border-radius: 8px;
    transition: all 0.3s;
}

.cta:hover {
    border-color: #d4af37;
    background: #333;
}

.cta .icon {
    font-size: 1.3em;
}

.error {
    color: #ff4444;
    text-align: center;
    margin-bottom: 15px;
    padding: 10px;
    background: rgba(255, 68, 68, 0.1);
    border-radius: 6px;
}

/* ==================== PÁGINA DE ADICIONAR LIVRO ==================== */

.form-container {
