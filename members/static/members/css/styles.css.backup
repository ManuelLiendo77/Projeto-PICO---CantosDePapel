/* ========================================
   PÁGINA DE DETALHE DO LIVRO (Amazon Style)
   ======================================== */

.livro-detalhe-container {
    max-width: 1400px;
    margin: 40px auto;
    padding: 0 20px;
    background: #1a1a1a;
    border-radius: 8px;
}

/* Breadcrumb */
.breadcrumb {
    padding: 20px 0;
    font-size: 0.9em;
    color: #b0b0b0;
}

.breadcrumb a {
    color: #d2691e;
    text-decoration: none;
    transition: color 0.3s;
}

.breadcrumb a:hover {
    color: #cc5500;
    text-decoration: underline;
}

.breadcrumb-separator {
    margin: 0 8px;
    color: #666;
}

.breadcrumb-current {
    color: #e0e0e0;
}

/* Grid Principal - 3 colunas */
.livro-detalhe-grid {
    display: grid;
    grid-template-columns: 400px 1fr 350px;
    gap: 40px;
    padding: 20px 0;
    align-items: start;
}

/* Coluna da Imagem */
.livro-detalhe-imagem-col {
    position: sticky;
    top: 20px;
}

.livro-detalhe-imagem {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    border: 2px solid #333;
}

.livro-sem-imagem {
    width: 100%;
    aspect-ratio: 2/3;
    background: #2a2a2a;
    border: 2px dashed #444;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #666;
}

.livro-sem-imagem span {
    font-size: 4em;
    margin-bottom: 10px;
}

.livro-sem-imagem p {
    font-size: 1em;
    color: #888;
}

/* Coluna de Informações */
.livro-detalhe-info {
    padding: 0 20px;
}

.livro-detalhe-titulo {
    font-size: 2em;
    color: #d2691e;
    margin-bottom: 10px;
    font-weight: 700;
    line-height: 1.3;
}

.livro-detalhe-autor {
    font-size: 1.1em;
    color: #b0b0b0;
    margin-bottom: 15px;
}

.livro-detalhe-autor span {
    color: #d2691e;
    font-weight: 600;
}

/* Meta Info (Categoria, ISBN, Novidade) */
.livro-detalhe-meta {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    margin-bottom: 20px;
}

.livro-categoria-badge {
    background: #704214;
    color: #f5e6d3;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.85em;
    font-weight: 600;
}

.livro-isbn {
    color: #888;
    font-size: 0.9em;
    padding: 6px 0;
}

.livro-novidade-badge {
    background: linear-gradient(135deg, #d2691e, #cc5500);
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.85em;
    font-weight: 600;
}

/* Avaliação */
.livro-avaliacao {
    margin-bottom: 25px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.estrela {
    font-size: 1.3em;
}

.estrela.preenchida {
    color: #d2691e;
}

.estrela.vazia {
    color: #444;
}

.avaliacao-texto {
    color: #b0b0b0;
    font-size: 0.9em;
    margin-left: 5px;
}

/* Descrição */
.livro-detalhe-descricao {
    margin-bottom: 30px;
    padding: 20px;
    background: #2a2a2a;
    border-radius: 8px;
    border-left: 4px solid #d2691e;
}

.livro-detalhe-descricao h3 {
    color: #d2691e;
    font-size: 1.3em;
    margin-bottom: 15px;
}

.livro-detalhe-descricao p {
    color: #c0c0c0;
    line-height: 1.7;
    font-size: 1em;
}

/* Detalhes do Produto */
.livro-detalhes-produto {
    padding: 20px;
    background: #2a2a2a;
    border-radius: 8px;
}

.livro-detalhes-produto h3 {
    color: #d2691e;
    font-size: 1.2em;
    margin-bottom: 15px;
}

.livro-detalhes-produto ul {
    list-style: none;
    padding: 0;
}

.livro-detalhes-produto li {
    color: #c0c0c0;
    padding: 8px 0;
    border-bottom: 1px solid #333;
}

.livro-detalhes-produto li:last-child {
    border-bottom: none;
}

.livro-detalhes-produto strong {
    color: #d2691e;
    margin-right: 10px;
}

/* Coluna de Compra (Sticky) */
.livro-detalhe-compra {
    position: sticky;
    top: 20px;
}

.compra-box {
    background: #2a2a2a;
    border: 2px solid #704214;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

/* Preço em Destaque */
.livro-preco-destaque {
    margin-bottom: 15px;
}

.preco-valor {
    font-size: 2.5em;
    color: #d2691e;
    font-weight: 700;
    display: block;
}

.preco-indisponivel {
    font-size: 1.3em;
    color: #888;
    font-weight: 600;
}

.loja-info {
    color: #b0b0b0;
    font-size: 0.9em;
    margin: 5px 0 20px 0;
}

.loja-info strong {
    color: #d2691e;
}

/* Status de Stock */
.stock-status {
    padding: 12px;
    border-radius: 6px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
}

.stock-status.em-stock {
    background: rgba(34, 139, 34, 0.2);
    color: #4ade80;
    border: 1px solid #4ade80;
}

.stock-status.sem-stock {
    background: rgba(220, 38, 38, 0.2);
    color: #ef4444;
    border: 1px solid #ef4444;
}

.stock-icon {
    font-size: 1.2em;
}

/* Botão Adicionar ao Carrinho GRANDE */
.btn-adicionar-grande {
    width: 100%;
    padding: 18px;
    font-size: 1.2em;
    font-weight: 700;
    background: linear-gradient(135deg, #d2691e, #cc5500);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-adicionar-grande:hover {
    background: linear-gradient(135deg, #cc5500, #b84c00);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(210, 105, 30, 0.4);
}

.btn-adicionar-grande:active {
    transform: translateY(0);
}

.btn-adicionar-grande.btn-disabled {
    background: #444;
    color: #888;
    cursor: not-allowed;
    transform: none;
}

.btn-adicionar-grande.btn-disabled:hover {
    background: #444;
    transform: none;
    box-shadow: none;
}

/* Link Comparar Preços */
.link-comparar-precos {
    display: block;
    text-align: center;
    color: #d2691e;
    text-decoration: none;
    margin-bottom: 20px;
    font-size: 0.95em;
    transition: color 0.3s;
}

.link-comparar-precos:hover {
    color: #cc5500;
    text-decoration: underline;
}

/* Informações de Envio */
.info-envio {
    padding-top: 20px;
    border-top: 1px solid #444;
}

.info-envio p {
    color: #b0b0b0;
    font-size: 0.9em;
    margin: 8px 0;
}

.info-envio strong {
    color: #4ade80;
}

/* Botão Voltar */
.livro-detalhe-voltar {
    padding: 30px 0;
    text-align: center;
}

.btn-voltar {
    display: inline-block;
    padding: 12px 30px;
    background: #704214;
    color: #f5e6d3;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s;
}

.btn-voltar:hover {
    background: #8b5a1e;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(112, 66, 20, 0.4);
}

/* Responsivo */
@media (max-width: 1200px) {
    .livro-detalhe-grid {
        grid-template-columns: 350px 1fr 300px;
        gap: 30px;
    }
}

@media (max-width: 992px) {
    .livro-detalhe-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .livro-detalhe-imagem-col,
    .livro-detalhe-compra {
        position: static;
    }
    
    .livro-detalhe-imagem {
        max-width: 400px;
        margin: 0 auto;
        display: block;
    }
}

@media (max-width: 768px) {
    .livro-detalhe-titulo {
        font-size: 1.6em;
    }
    
    .preco-valor {
        font-size: 2em;
    }
    
    .btn-adicionar-grande {
        font-size: 1em;
        padding: 15px;
    }
}

/* ==================== PÁGINA DE LOGIN ==================== */

.login-container {
    max-width: 480px;
    margin: 60px auto;
    background: linear-gradient(135deg, #fff 0%, #fffef9 100%);
    border-radius: 20px;
    padding: 50px 45px;
    box-shadow: 0 15px 50px rgba(92, 64, 51, 0.2);
    position: relative;
    border: 2px solid #e5c29f;
}

.close-circle {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #f5e6d3;
    color: #704214;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5em;
    cursor: pointer;
    transition: all 0.3s;
    border: 2px solid #e5c29f;
    font-weight: 300;
}

.close-circle:hover {
    background: #704214;
    color: #fff;
    transform: rotate(90deg);
    border-color: #704214;
}

.login-container h1 {
    color: #704214;
    font-size: 2.5em;
    text-align: center;
    margin-bottom: 35px;
    font-weight: 300;
    letter-spacing: 1px;
}

.login-container .error {
    background: #ffeaea;
    color: #d32f2f;
    padding: 15px;
    border-radius: 10px;
    margin-bottom: 25px;
    text-align: center;
    font-family: Arial, sans-serif;
    border: 1px solid #ffcdd2;
}

.login-container .field {
    margin-bottom: 25px;
}

.login-container .field input {
    width: 100%;
    padding: 16px 20px;
    border: 2px solid #e5c29f;
    border-radius: 12px;
    font-size: 1.05em;
    background: #fff;
    color: #5c4033;
    transition: all 0.3s;
    font-family: Arial, sans-serif;
}

.login-container .field input:focus {
    outline: none;
    border-color: #d2691e;
    background: #fffef9;
    box-shadow: 0 0 0 3px rgba(210, 105, 30, 0.1);
}

.login-container .field input::placeholder {
    color: #b8a896;
}

.inline-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    font-family: Arial, sans-serif;
    font-size: 0.95em;
}

.inline-row .checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #704214;
    cursor: pointer;
}

.inline-row .checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: #d2691e;
}

.inline-row .forgot {
    color: #d2691e;
    text-decoration: none;
    transition: color 0.3s;
}

.inline-row .forgot:hover {
    color: #cc5500;
    text-decoration: underline;
}

.login-container button.primary {
    width: 100%;
    padding: 16px;
    background: linear-gradient(135deg, #d2691e 0%, #cc5500 100%);
    color: #fff;
    border: none;
    border-radius: 12px;
    font-size: 1.15em;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    font-family: Arial, sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.login-container button.primary:hover {
    background: linear-gradient(135deg, #cc5500 0%, #b84c00 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(210, 105, 30, 0.4);
}

.login-container button.primary:active {
    transform: translateY(0);
}

.separator {
    position: relative;
    text-align: center;
    margin: 35px 0;
}

.separator::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #e5c29f;
}

.separator span {
    position: relative;
    background: #fff;
    padding: 0 20px;
    color: #999;
    font-family: Arial, sans-serif;
    font-size: 0.9em;
}

.login-container .cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    padding: 16px;
    background: #fff;
    color: #d2691e;
    border: 2px solid #d2691e;
    border-radius: 12px;
    text-decoration: none;
    font-weight: bold;
    font-family: Arial, sans-serif;
    transition: all 0.3s;
    font-size: 1.05em;
}

.login-container .cta:hover {
    background: #d2691e;
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(210, 105, 30, 0.3);
}

.login-container .cta .icon {
    font-size: 1.3em;
}

/* ==================== PÁGINA DE REGISTRO ==================== */

.register-container {
    max-width: 800px;
    margin: 60px auto;
    background: linear-gradient(135deg, #fff 0%, #fffef9 100%);
    border-radius: 20px;
    padding: 50px 45px;
    box-shadow: 0 15px 50px rgba(92, 64, 51, 0.2);
    position: relative;
    border: 2px solid #e5c29f;
}

.register-container h1 {
    color: #704214;
    font-size: 2.5em;
    text-align: center;
    margin-bottom: 15px;
    font-weight: 300;
    letter-spacing: 1px;
}

.register-container h3 {
    color: #d2691e;
    font-size: 1.5em;
    margin: 35px 0 20px 0;
    padding-bottom: 10px;
    border-bottom: 2px solid #e5c29f;
    font-weight: 400;
}

.register-container form {
    margin-top: 35px;
}

.register-container .field-group {
    margin-bottom: 25px;
}

.register-container label {
    display: block;
    color: #704214;
    font-weight: 600;
    margin-bottom: 10px;
    font-family: Arial, sans-serif;
    font-size: 0.95em;
}

.register-container input[type="text"],
.register-container input[type="email"],
.register-container input[type="password"],
.register-container input[type="tel"],
.register-container select {
    width: 100%;
    padding: 14px 18px;
    border: 2px solid #e5c29f;
    border-radius: 10px;
    font-size: 1em;
    background: #fff;
    color: #5c4033;
    transition: all 0.3s;
    font-family: Arial, sans-serif;
}

.register-container input:focus,
.register-container select:focus {
    outline: none;
    border-color: #d2691e;
    background: #fffef9;
    box-shadow: 0 0 0 3px rgba(210, 105, 30, 0.1);
}

.register-container .row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 25px;
}

.register-container .col {
    display: flex;
    flex-direction: column;
}

.register-container .col label {
    margin-bottom: 10px;
}

.register-container .actions {
    display: flex;
    gap: 15px;
    margin-top: 40px;
}

.register-container .btn {
    flex: 1;
    padding: 16px;
    border-radius: 12px;
    font-size: 1.1em;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    font-family: Arial, sans-serif;
    text-align: center;
    text-decoration: none;
    border: none;
}

.register-container .btn:first-child {
    background: linear-gradient(135deg, #d2691e 0%, #cc5500 100%);
    color: #fff;
}

.register-container .btn:first-child:hover {
    background: linear-gradient(135deg, #cc5500 0%, #b84c00 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(210, 105, 30, 0.4);
}

.register-container .btn.secondary {
    background: #fff;
    color: #704214;
    border: 2px solid #704214;
}

.register-container .btn.secondary:hover {
    background: #704214;
    color: #fff;
    transform: translateY(-2px);
}

#form-errors {
    background: #ffeaea;
    color: #d32f2f;
    padding: 15px;
    border-radius: 10px;
    margin: 25px 0;
    font-family: Arial, sans-serif;
    border: 1px solid #ffcdd2;
    display: none;
}

#form-errors.active {
    display: block;
}

/* Responsive Login/Register */
@media (max-width: 768px) {
    .login-container,
    .register-container {
        margin: 30px 20px;
        padding: 35px 25px;
    }
    
    .login-container h1,
    .register-container h1 {
        font-size: 2em;
    }
    
    .register-container .row {
        grid-template-columns: 1fr;
        gap: 0;
    }
    
    .register-container .actions {
        flex-direction: column;
    }
}
